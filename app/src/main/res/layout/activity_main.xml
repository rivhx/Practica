<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rivh.practica.MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/main_activity_button_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="enviar get" />

        <TextView
            android:id="@+id/main_activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respuesta del GET"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/main_activity_txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nombre" />

        <EditText
            android:id="@+id/main_activity_txtApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="apellido" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/main_activity_button_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="enviar post" />

        <TextView
            android:id="@+id/main_activity_text_post_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respuesta del Post"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/main_activity_button_get_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="enviar get image" />

        <ImageView
            android:id="@+id/main_activity_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background" />

    </android.support.v7.widget.LinearLayoutCompat>


</android.support.constraint.ConstraintLayout>
